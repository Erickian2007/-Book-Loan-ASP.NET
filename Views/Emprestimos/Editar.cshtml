@model EmprestimosModel
@{
    ViewData["tittle"] = "Editar Empréstimo";
}
<br>
<h1>Editar Empréstimo</h1>
<br>
<br>
<form method="post" asp-controller="Emprestimos" asp-action="Editar">
  
  <div class="mb-3">
    <label for="Recebedor" class="form-label">Recebedor</label>
    <input type="text" class="form-control" asp-for="Recebedor" id="Recebedor" placeholder="Quem Esta Recebendo O Livro?">
    <span class="text-danger" asp-validation-for="Recebedor"></span>
  </div>

  <div class="mb-3">
    <label for="Fornecedor" class="form-label">Fornecedor</label>
    <input type="text" class="form-control" asp-for="Fornecedor" id="Fornecedor" placeholder="Quem Está Fornecendor O Livro?">
    <span class="text-danger" asp-validation-for="Fornecedor"></span>
  </div>

  <div class="mb-3">
    <label for="Livro" class="form-label">Livro</label>
    <input type="text" class="form-control" asp-for="LivroEmprestado" id="Livro" placeholder="Qual Livro Será Emprestado?">
    <span class="text-danger"  asp-validation-for="LivroEmprestado"></span>
  </div>
  
  <div class="d-flex gap-5 mt-5">
    <button type="submit" class="btn btn-success w-50">Editar</button>
    <a class="btn btn-primary w-50" asp-controller="Emprestimos" asp-action="Index">Voltar</a>
  </div>

</form>
