@{
    ViewData["tittle"] = "Cadastrar";
}

<form>
  <div class="mb-3">
    <label for="Recebedor" class="form-label">Recebedor</label>
    <input type="text" class="form-control" id="Recebedor" placeholder="Quem Esta Recebendo O Livro?">
  </div>

  <div class="mb-3">
    <label for="Fornecedor" class="form-label">Fornecedor</label>
    <input type="text" class="form-control" id="Fornecedor" placeholder="Quem Está Fornecendor O Livro?">
  </div>

  <div class="mb-3">
    <label for="Livro" class="form-label">Livro</label>
    <input type="text" class="form-control" id="Livro" placeholder="Qual Livro Será Emprestado?">
  </div>
  
  <div class="d-flex gap-5 mt-5">
    <button type="submit" class="btn btn-success w-50">Adicionar</button>
    <a class="btn btn-primary w-50">Voltar</a>

  </div>

</form>
